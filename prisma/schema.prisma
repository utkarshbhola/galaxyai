generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String        @id
  workflows Workflow[]
  runs      WorkflowRun[]
}

model Workflow {
  id        String        @id @default(uuid())
  userId    String
  name      String
  nodes     Json
  edges     Json
  createdAt DateTime      @default(now())

  user User @relation(fields: [userId], references: [id])
  runs WorkflowRun[]      // âœ… ADD THIS
}

model WorkflowRun {
  id         String   @id @default(uuid())
  workflowId String
  userId     String
  startedAt  DateTime
  finishedAt DateTime
  status     String
  result     Json

  workflow Workflow @relation(fields: [workflowId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}


